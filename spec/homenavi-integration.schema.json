{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.homenavi.org/integration/v1/homenavi-integration.schema.json",
  "title": "Homenavi Integration Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "id", "name", "version"],
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]{1,62}[a-z0-9]$"
    },
    "name": { "type": "string", "minLength": 1, "maxLength": 128 },
    "version": { "type": "string", "minLength": 1, "maxLength": 64 },
    "publisher": { "type": "string", "minLength": 1, "maxLength": 128 },
    "homepage": { "type": "string", "format": "uri" },
    "verified": { "type": "boolean" },
    "secrets": {
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "string", "minLength": 1, "maxLength": 128 },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "key": { "type": "string", "minLength": 1, "maxLength": 128 },
              "description": { "type": "string", "maxLength": 256 }
            },
            "required": ["key"]
          }
        ]
      }
    },
    "ui": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sidebar": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean" },
            "path": { "type": "string", "pattern": "^/" },
            "label": { "type": "string" },
            "icon": { "type": "string" }
          }
        }
      }
    },
    "widgets": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "display_name", "entry"],
        "properties": {
          "type": { "type": "string", "minLength": 1, "maxLength": 128 },
          "display_name": { "type": "string", "minLength": 1, "maxLength": 128 },
          "description": { "type": "string", "maxLength": 512 },
          "entry": {
            "type": "object",
            "additionalProperties": false,
            "required": ["kind", "url"],
            "properties": {
              "kind": { "type": "string", "enum": ["iframe"] },
              "url": { "type": "string", "pattern": "^/" }
            }
          },
          "settings_schema": { "type": "object" },
          "requested_scopes": {
            "type": "array",
            "items": { "type": "string", "minLength": 1, "maxLength": 128 }
          }
        }
      }
    },
    "automation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "actions": { "type": "array" },
        "triggers": { "type": "array" },
        "conditions": { "type": "array" }
      }
    },
    "config_schema": { "type": "object" }
  }
}
